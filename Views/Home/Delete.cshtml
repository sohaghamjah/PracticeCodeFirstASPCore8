@model CodeFirstASPCore8.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>Student Details</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Standard</dt>
        <dd class="col-sm-10">@Model.Standard</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
</form>
