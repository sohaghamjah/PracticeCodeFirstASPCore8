@model CodeFirstASPCore8.Models.Student
@{
    ViewData["Title"] = "Create";
}

<h1>Create Student</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Student Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div> 
            <div class="form-group mt-2">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" placeholder="Student Gender"/>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" placeholder="Student Age"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Standard" class="control-label"></label>
                <input asp-for="Standard" class="form-control" placeholder="Student Standerd"/>
                <span asp-validation-for="Standard" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>
